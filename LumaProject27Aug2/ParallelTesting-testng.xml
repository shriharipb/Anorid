<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="methods" name="ParallelSuite">

	<listeners>
		<listener class-name = "com.luma.utilities.ListenerSetup"/>
		<listener class-name = "com.luma.utilities.ExtentReporterNG"/>
	</listeners>

  <test thread-count="5" parallel="methods" name="ChromeTest">
  <parameter name = "browser" value = "chrome"/>
    <classes>
      <class name="com.luma.testLayer.BuyFuctionality"/>
      <class name="com.luma.testLayer.LoginPageTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" parallel="methods" name="FirefoxTest">
  <parameter name = "browser" value = "firefox"/>
    <classes>
      <class name="com.luma.testLayer.BuyFuctionality"/>
      <class name="com.luma.testLayer.LoginPageTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
